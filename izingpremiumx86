#####################################################SYSTEM.SH

#!/bin/bash
# 
# system management

#######################################
# creates user
# Arguments:
#   None
#######################################
system_create_user() {
  banner
  printf "%s""${CYAN_LIGHT} ðŸ’» Agora, vamos criar o usuÃ¡rio para deploy...${NC}"
  printf "\n\n"

  sleep 2

#  sudo su - root <<EOF
#  useradd -m -p $(openssl passwd -1 ${deploy_password}) -s /bin/bash -G sudo deploy
#  usermod -aG sudo deploy
#EOF

#!/bin/bash

deploy_username="deploy"
#deploy_password="sua_senha_aqui"

# Verificar se o usuÃ¡rio deploy jÃ¡ existe
if id "$deploy_username" >/dev/null 2>&1; then
  echo "O usuÃ¡rio $deploy_username jÃ¡ existe. Testando senha..."

  # Testar a senha do usuÃ¡rio deploy
  if echo "$deploy_password" | sudo -S -u "$deploy_username" true >/dev/null 2>&1; then
    echo "Senha correta. O usuÃ¡rio $deploy_username estÃ¡ pronto para uso."
  else
    echo "Senha incorreta para o usuÃ¡rio $deploy_username."
    exit 1
  fi
else
  echo "Criando usuÃ¡rio $deploy_username..."

  # Criar o usuÃ¡rio deploy com a senha fornecida
  sudo su - root <<EOF
  useradd -m -p "$(openssl passwd -1 "${deploy_password}")" -s /bin/bash -G sudo "${deploy_username}"
  usermod -aG sudo ${deploy_username}
EOF

  echo "UsuÃ¡rio $deploy_username criado com sucesso."
fi

  sleep 2
}

