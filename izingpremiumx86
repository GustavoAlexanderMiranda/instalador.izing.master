#######################################
# installs certbot
# Arguments:
#   None
#######################################
system_certbot_install() {
  banner
  printf "%s""${CYAN_LIGHT} ðŸ’» Instalando certbot...${NC}"
  printf "\n\n"

  sleep 2

  sudo su - root <<EOF
  apt-get remove certbot
  snap install --classic certbot
  ln -s /snap/bin/certbot /usr/bin/certbot
EOF

  sleep 2
}

