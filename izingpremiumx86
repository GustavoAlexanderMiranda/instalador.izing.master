system_puppeteer_dependencies() {
  banner
  printf "%s""${CYAN_LIGHT} ðŸ’» Instalando puppeteer dependencies...${NC}"
  printf "\n\n"

  sleep 2

  sudo su - root <<EOF
  apt-get install -y --quiet libxshmfence-dev \
                      libgbm-dev \
