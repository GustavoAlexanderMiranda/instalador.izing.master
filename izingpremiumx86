# Function to display the menu
show_menu() {
  clear
  banner
  printf "%s""   ${BLUE}[${NC}${YELLOW}1${NC}${BLUE}]${NC} ${GREEN}Instalar AMD / X86${NC}"
  printf "%s""              |    ${BLUE}[${NC}${YELLOW}2${NC}${BLUE}]${NC} ${GREEN}Instalar ARM64${NC}\n"
  printf "%s""   ${BLUE}[${NC}${YELLOW}3${NC}${BLUE}]${NC} ${GRAY_LIGHT}Atualizar"
  printf "%s""                       |    ${BLUE}[${NC}${YELLOW}4${NC}${BLUE}]${NC} ${CYAN_LIGHT}Adicionar InstÃ¢ncia AMD / X86${NC}\n"
  printf "%s""   ${BLUE}[${NC}${YELLOW}5${NC}${BLUE}]${NC} ${CYAN_LIGHT}Adicionar InstÃ¢ncia ARM64${NC}"
  printf "%s""       |    ${BLUE}[${NC}${YELLOW}6${NC}${BLUE}]${NC} ${BLUE}Renovar Certificados${NC}\n"
  printf "%s""   ${BLUE}[${NC}${YELLOW}7${NC}${BLUE}]${NC} ${YELLOW}Download Izing Pro${NC}${RED}* PASTA ROOT${NC}"
  printf "%s""  |    ${BLUE}[${NC}${YELLOW}8${NC}${BLUE}]${NC} ${GREEN}Instalar Izing Docker${NC}\n"
  printf "%s""   ${BLUE}[${NC}${YELLOW}*${NC}${BLUE}]${NC} ${RED}SAIR ${NC}\n\n"
  printf "     FUNÃ‡ÃƒO ATUALIZAR FUNCIONA SOMENTE COM INSTALAÃ‡Ã•ES FEITAS PELO INSTALADOR\n\n"
  printf "%s""${RED}EM ALGUMAS VPS O USUARIO DEPLOY NÃƒO Ã‰ CRIADO PELO INSTALADOR PEDIMOS QUE CRIE ELE ANTES${NC}\n"
  printf "\n"
}

# Function to execute the selected option
handle_option() {
  case $1 in
	1) get_urls
       exit
       ;;
    2) get_urls_arm64
       exit
       ;;
    3) software_update 
      exit
      ;;
    4) instancias_urls
       exit
       ;;
    5) instancias_arm64_urls
       exit
       ;;
    6) certificado_urls
       exit
       ;;
    7) baixar_izing
       exit
       ;;
    8) submenu_instalar_docker
       exit
       ;;
    *) 
	   echo "Saindo..."
	   exit 0
	   ;;



    *)
      echo "OpÃ§Ã£o Invalida. Tente Novamente."
      ;;
  esac
}

# Main loop
while true; do
  show_menu
  read -r -p "Entre com uma opÃ§Ã£o (1-8): " choice
  handle_option "$choice"
  read -r -p "Tecle Enter para Continuar..."
done



