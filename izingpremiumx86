#######################################
# updates frontend code
# Arguments:
#   None
#######################################
backend_update() {
  banner
  printf "%s""${RED} ðŸ’» Atualizando o backend...${NC}"
  printf "\n\n"

  sleep 2

  sudo su - deploy <<EOF
  cd /home/deploy/$instancia
  git pull
  npm install
  rm -rf dist 
  npm run build
  npx sequelize db:migrate
  pm2 restart all
EOF

  sleep 2
}

