# Submenu para Instalar Docker X86
submenu_instalar_docker() {
  clear
  banner
  printf "OpÃ§Ãµes para Instalar Izing em Docker:\n\n"
  printf "1) Nova InstalaÃ§Ã£o X86\n"
  printf "2) Nova InstÃ¢ncia X86\n"
  printf "3) Nova InstalaÃ§Ã£o ARM64\n"
  printf "4) Nova InstÃ¢ncia ARM64\n"
  printf "5) Voltar ao Menu Principal\n\n"
  
  read -r -p "Entre com uma opÃ§Ã£o (1-5): " choice
  case $choice in
    1) instalardocker86
       return
      ;;
    2) instanciadocker86
       return
      ;;
    3) instalardockerarm
       return
      ;;
    4) instanciadockerarm
       return
       ;;    
    5)
      return
      ;;
    *)
      echo "OpÃ§Ã£o Invalida. Tente Novamente."
      ;;
  esac
}


